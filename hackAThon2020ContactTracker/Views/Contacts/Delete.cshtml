@model hackAThon2020ContactTracker.Models.Contact

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name of Person (or Business)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            Symptoms?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.showingSymptoms)
        </dd>
        <dt class = "col-sm-2">
            Resident?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.livingWith)
        </dd>
        <dt class = "col-sm-2">
            Employer?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isEmployer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

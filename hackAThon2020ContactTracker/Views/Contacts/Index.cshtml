@model IEnumerable<hackAThon2020ContactTracker.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name of Person (or Business)
            </th>
            <th>
                Location
            </th>
            <th>
                Time
            </th>
            <th>
                Symptoms?
            </th>
            <th>
                Resident?
            </th>
            <th>
                Employer?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.showingSymptoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.livingWith)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isEmployer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
